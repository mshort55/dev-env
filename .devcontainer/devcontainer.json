{
  "name": "Dev Env",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "dev",
  "workspaceFolder": "/work",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.24"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "ms-python.debugpy",
        "dinhani.copy-on-select",
        "dbaeumer.vscode-eslint",
        "github.vscode-pull-request-github",
        "eamodio.gitlens",
        "golang.go",
        "esbenp.prettier-vscode",
        "timonwong.shellch",
        "vscodevim.vim"
      ]
    }
  },

  // 5. --- AUTOMATION ---
  // Run a command *after* the container is created
  //"postCreateCommand": "npm install -g yarn",

  // Connect as the 'root' user (simpler for a personal env, no permissions issues)
  "remoteUser": "root"
}