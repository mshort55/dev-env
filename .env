# ============================================
# Directory Names
# ============================================
# These directory names are used on BOTH host and container
GENERAL_DIR_NAME=General
REPOS_DIR_NAME=Repos
WORKSPACE_DIR_NAME=UbuntuSync

# ============================================
# Host Paths
# ============================================
HOST_GENERAL_DIR=${HOME}/${GENERAL_DIR_NAME}
HOST_REPOS_DIR=${HOME}/${REPOS_DIR_NAME}
HOST_WORKSPACE_DIR=${HOME}/${WORKSPACE_DIR_NAME}

# ============================================
# Container User Configuration
# ============================================
# UID needs to match mac host user ID to avoid file system permission issues on volume mounts
CONTAINER_USER=mjs
CONTAINER_UID=501

# ============================================
# Container Paths
# ============================================
DEV_ENV_DIR=/${REPOS_DIR_NAME}/dev-env
KEEPASS_DB_PATH=/${WORKSPACE_DIR_NAME}/dev-env.kdbx
